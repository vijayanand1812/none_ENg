<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/eng_header" android:id="@+id/include_header" />
    <include layout="@layout/eng_footer" android:id="@+id/include_footer" />

    <RelativeLayout

        android:layout_below="@+id/include_header"
        android:layout_above="@+id/include_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"

        >
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="1250dp"
            android:layout_height="570dp "
            android:layout_marginLeft="15dp"
            android:background="#ffffff"
            >

            <ImageView
                android:layout_width="1100dp"
                android:layout_height="57dp"
                android:id="@+id/imageView"
                android:background="@drawable/talktousbg"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"

                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tell a friend"
                android:id="@+id/textView"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:textColorHighlight="#ffffff"
                android:layout_alignBottom="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Your message will appear as shown below:"
                android:id="@+id/textView2"
                android:layout_marginTop="41dp"
                android:textColor="#000000"
                android:textSize="26dp"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true" />



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/tellafriend_msg"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignStart="@+id/imageView"
                android:layout_marginTop="19dp"
                android:textAlignment="viewStart"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignEnd="@+id/imageView" />



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/tellafriend_txtyourname"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/tellafriend_msg"
                android:layout_alignLeft="@+id/tellafriend_msg"
                android:layout_alignStart="@+id/tellafriend_msg"
                android:layout_toLeftOf="@+id/textView"
                android:hint="Your Name" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/tellafriend_txtfriendsname"
                android:layout_alignTop="@+id/tellafriend_txtyourname"
                android:layout_toRightOf="@+id/textView"
                android:layout_alignRight="@+id/tellafriend_msg"
                android:layout_alignEnd="@+id/tellafriend_msg"
                android:hint="Friend's Name" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/tellafriend_txtyouremail"
                android:layout_below="@+id/tellafriend_txtyourname"
                android:layout_alignLeft="@+id/tellafriend_txtyourname"
                android:layout_alignStart="@+id/tellafriend_txtyourname"
                android:layout_marginTop="17dp"
                android:layout_alignRight="@+id/tellafriend_txtyourname"
                android:layout_alignEnd="@+id/tellafriend_txtyourname"
                android:hint="Your Email" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/tellafriend_txtfriendemail"
                android:layout_alignTop="@+id/tellafriend_txtyouremail"
                android:layout_toRightOf="@+id/textView"
                android:layout_alignRight="@+id/tellafriend_msg"
                android:layout_alignEnd="@+id/tellafriend_msg"
                android:hint="Friend's Email" />

            <ImageButton
                android:layout_width="171dp"
                android:layout_height="52dp"
                android:id="@+id/tellafriend_btnsend"
                android:background="@drawable/tellafriend_sendbtn"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp" />


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>